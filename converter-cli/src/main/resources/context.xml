<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="abbyyReader" class="de.unigoettingen.sub.convert.impl.AbbyyXMLReader"/>
	<bean id="teiWriter" class="de.unigoettingen.sub.convert.impl.TeiP5Writer"/>

	<bean id="converter" class="de.unigoettingen.sub.convert.cli.Converter">
		<property name="readers">
			<map>
				<entry key="abbyyxml">
					<ref local="abbyyReader"/>
				</entry>
			</map>
		</property>
		<property name="writers">
			<map>
				<entry key="tei">
					<ref local="teiWriter"/>
				</entry>
			</map>
		</property>
	</bean>


</beans>